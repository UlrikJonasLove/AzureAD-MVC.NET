<ul class="navbar-nav">
    @if(User.Identity.IsAuthenticated) {
        <li class="nav-item">
            <span class="navbar-text text-dark">Välkommen @User.Identity.Name!</span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="AuthAD" asp-action="SignOutAD">Logga ut</a>
        </li>
    }
    else {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="AuthAD" asp-action="SignInAD">Logga in</a>
        </li>
    }
</ul>